  "scripts": {
    "build": "nest build",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main/main.js",
    "test": "jest --passWithNoTests --silent --noStackTrace --runInBand",
    "test:unit": "npm test -- --watch -c jest-unit-config.js",
    "test:integration": "npm test -- --watch -c jest-integration-config.js",
    "test:verbose": "jest --passWithNoTests --runInBand",
    "test:verbose-unit": "jest --passWithNoTests --runInBand --watch -c jest-unit-config.js",
    "test:verbose-integration": "jest --passWithNoTests --runInBand --watch -c jest-integration-config.js",
    "test:ci": "npm test -- --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "prepare": "husky install",
    "seed:addSocialMedia": "ts-node -r tsconfig-paths/register src/main/seeds/social-media/add-social-media-seed.ts",
    "seed:addRpgStyle": "ts-node -r tsconfig-paths/register src/main/seeds/rpg-style/add-rpg-style-seed.ts"
